<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.presentation.logIn.welcomePage.WelcomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="36sp"
            android:id="@+id/fragmentWelcomePageWelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!" />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="56dp"
            android:id="@+id/fragmentWelcomePageSignUpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register a new account" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:id="@+id/fragmentWelcomePageSignUpButton"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Sign up" />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:id="@+id/fragmentWelcomePageSignInText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You already have an account?" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:id="@+id/fragmentWelcomePageSignInButton"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Sign In" />

    </LinearLayout>
</FrameLayout>