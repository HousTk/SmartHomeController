<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemFragmentAddressesDevice"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemFragmentAddressesDevice2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/itemFragmentAddressesDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Device name"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemFragmentAddressesDeviceImage" />

            <TextView
                android:id="@+id/itemFragmentAddressesDeviceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device type"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="@+id/itemFragmentAddressesDeviceName"
                app:layout_constraintStart_toStartOf="@+id/itemFragmentAddressesDeviceName"
                app:layout_constraintTop_toBottomOf="@+id/itemFragmentAddressesDeviceName" />

            <TextView
                android:id="@+id/itemFragmentAddressesDeviceIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device IP"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="@+id/itemFragmentAddressesDeviceName"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="@+id/itemFragmentAddressesDeviceName"
                app:layout_constraintTop_toBottomOf="@+id/itemFragmentAddressesDeviceType" />

            <ImageView
                android:id="@+id/itemFragmentAddressesDeviceImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_light_white" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>